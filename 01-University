class UniversityMember {
    constructor (name,age,role) { 
        this.name = name;
        this.age = age;
        this.energy = 24;
        this.teachers = [];
        this.students = [];
    }
    addMember(member,role){
        if(role === 'teacher'){
            this.teachers.push(member);
        } else if(role === 'student'){
            this.students.push(member);
        }
    }
    removeMember(member,role){
        if(type === 'teacher'){
            this.teachers.push(member);
        } else{
            this.students.push(member);
        }
    }
    startLesson(role){
        if(role === 'teacher'){
            this.energy = this.energy - 5;
        } else if(role === 'student'){
            this.energy = this.energy - 2;
        }
        return this.energy;
    }
    info(){
        let inform = {
            name: this.name,
            age: this.age,
            energy: this.energy,
        }
        return inform;
    }
}
